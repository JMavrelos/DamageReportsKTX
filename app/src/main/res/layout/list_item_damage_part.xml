<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_elevation"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/damage_part_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            tools:text="This is a test it is very long and it should be long" />

        <Button
            android:id="@+id/damage_part_quantity_subtract"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/symbol_subtract" />

        <TextView
            android:id="@+id/damage_part_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding"
            tools:text="24" />

        <Button
            android:id="@+id/damage_part_quantity_add"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/symbol_add" />

        <TextView
            android:id="@+id/damage_part_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding"
            android:singleLine="true"
            android:textAlignment="center"
            tools:text="4332,1230.00" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>